function add(text, cls){
  let d = document.createElement("div");
  d.className = cls;
  d.innerText = text;
  chat.appendChild(d);
  chat.scrollTop = chat.scrollHeight;
}

function speak(text){
  let u = new SpeechSynthesisUtterance(text);
  u.lang = text.match(/[‡§Ö-‡§π]/) ? "hi-IN" : "en-IN";
  speechSynthesis.speak(u);
}

